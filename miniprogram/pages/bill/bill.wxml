<view class="page">
    <view class="page__bd">
        <view class="weui-panel weui-panel_access">
            <view class="weui-panel__hd" style="position: fixed;z-index: 999;">
              <view class="query-select {{inComeSelectFlag ? 'select-color' : 'no-select-color'}}" bindtap="queryParamChange" data-type="income">收入</view>
              <view class="query-select {{paySelectFlag ? 'select-color' : 'no-select-color'}}" bindtap="queryParamChange" data-type="pay">支出</view>
            </view>
            <view class="weui-loadmore" style="padding-top: 60px;" wx:if="{{loading}}">
              <view class="weui-loading"></view>
              <view class="weui-loadmore__tips">正在加载</view>
            </view>
            <view class="weui-panel__bd" style="margin-bottom: 40px;margin-top: 50px;">
                <navigator url="" class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active" wx:for="{{listResult}}" wx:key="index" wx:for-item="item">
                    <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
                        <image class="weui-media-box__thumb" src="{{item.billType == 'subtract' ? '/images/icon_income.png':'/images/icon_pay.png'}}" />
                    </view>
                    <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
                        <view class="weui-media-box__title">
                          {{item.shopName}}
                          <view class="customer-price"> 
                              {{item.billType == "subtract" ? "+" : "-"}}{{item.price}}
                          </view>
                        </view>
                        <view class="weui-media-box__desc">
                          数量：{{item.num}}
                        </view>
                        <view class="weui-media-box__desc">
                          {{item.createTimeStr}}
                        </view>
                    </view>
                </navigator>
            </view>
        </view>
    </view>
</view>
