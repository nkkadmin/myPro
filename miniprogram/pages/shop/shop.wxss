page{
  background-color: rgb(252, 248, 248); 
}
.customer-sanc-button-class{
  margin: 20px;
  width: 80%;
}
.delet-confirm button{
  width: 40% !important;
}
.customer-button-class {
  margin: 10px;
  width: 41%;
  display: inline-block;
}
.button-sp-area{
    margin: 0 0 5px 0;
    text-align:center;
    padding: 0px 0px 10px 0px;
}
.mini-btn{
    margin: 0 4px;
    width: 82px;
}
.container {
  font-size: 17px;
  color: rgb(90, 87, 87);
  margin-bottom: 50px;
}
.weui-input {height: 30px;}
.page__bd{width: 100%;margin-top: 65px;}

.weui-demo-dialog{
  visibility:hidden;
  opacity:0;
  transition:all .3s;
}
.weui-half-screen-dialog{
  transition:all .3s;
  transform:translateY(100%);
}
.weui-demo-dialog_show{
  visibility:visible;
  opacity:1;
}
.weui-demo-dialog_show .weui-half-screen-dialog{
    transform:translateY(0);
}
.change-stock-input{
  background-color: rgb(207, 204, 204);
  width: 40px;
  height: 40px;
  border-radius: 5px;
  line-height: 40px;
}
.weui-dialog__bd{
  display: inherit;
}
.weui-dialog__bd{
  margin-left: 27px;
}
.subtract-stock-btn{
  line-height: 40px !important;
}
.add-stock-btn{
  line-height: 40px !important;
}
.weui-loadmore {
  width: 100%;
  height: 100rpx;
  font-size: 30rpx;
  text-align: center;
  margin-top: 30rpx;
}

.weui-loading {
  width: 50rpx;
  height: 50rpx;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}

.weui-loadmore-tips {
  display: inline-block;
  vertical-align: middle;
}
.form-body{
  margin-top: 60px;
  width: 90%;
}
.form-body input{
  height: 40px;
}
.button-sp-area button{
  width: 20% !important;
}
