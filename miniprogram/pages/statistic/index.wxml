<view class="page">
  <view class="weui-panel__hd" bindtap="moreBills" data-type="weekBill" >今日
    <view class="customer-more">></view>
  </view>
  <view class="weui-panel__bd">
    <view class="weui-flex">
      <view class="weui-flex__item">
        <view class="placeholder">出货：{{todayResult.outcomeNum}}</view>
      </view>
      <view class="weui-flex__item">
        <view class="placeholder">进货：{{todayResult.incomeNum}}</view>
      </view>
    </view>
    <view class="weui-flex">
      <view class="weui-flex__item">
        <view class="placeholder">收入：+{{todayResult.incomePrice}}</view>
      </view>
      <view class="weui-flex__item">
        <view class="placeholder">支出：-{{todayResult.outcomePrice}}</view>
      </view>
    </view>
    <view class="weui-flex">
      <view class="weui-flex__item">
        <view class="placeholder">总收入：{{todayResult.totalIncomePrice}}</view>
      </view>
    </view>
  </view>
  <view class="weui-panel__hd" data-type="weekBill" bindtap="moreBills">本周
    <view class="customer-more" >></view>
    <view class="customer-date">{{thisWeekStartDate}} ~ {{thisWeekEndDate}}</view>
  </view>
  <view class="weui-panel__bd">
    <view class="weui-flex">
      <view class="weui-flex__item">
        <view class="placeholder">出货：{{thisWeekResult.outcomeNum}}</view>
      </view>
      <view class="weui-flex__item">
        <view class="placeholder">进货：{{thisWeekResult.incomeNum}}</view>
      </view>
    </view>
    <view class="weui-flex">
      <view class="weui-flex__item">
        <view class="placeholder">收入：+{{thisWeekResult.incomePrice}}</view>
      </view>
      <view class="weui-flex__item">
        <view class="placeholder">支出：-{{thisWeekResult.outcomePrice}}</view>
      </view>
    </view>
    <view class="weui-flex">
      <view class="weui-flex__item">
        <view class="placeholder">总收入：{{thisWeekResult.totalIncomePrice}}</view>
      </view>
    </view>
  </view>
  <view class="weui-panel__hd" data-type="monthBill" bindtap="moreBills">本月
    <view class="customer-more" >></view>
    <view class="customer-date">{{thisMonthStartDate}} ~ {{thisMonthEndDate}}</view>
  </view>
  <view class="weui-panel__bd">
    <view class="weui-flex">
      <view class="weui-flex__item">
        <view class="placeholder">出货：{{thisMonthResult.outcomeNum}}</view>
      </view>
      <view class="weui-flex__item">
        <view class="placeholder">进货：{{thisMonthResult.incomeNum}}</view>
      </view>
    </view>
    <view class="weui-flex">
      <view class="weui-flex__item">
        <view class="placeholder">收入：+{{thisMonthResult.incomePrice}}</view>
      </view>
      <view class="weui-flex__item">
        <view class="placeholder">支出：-{{thisMonthResult.outcomePrice}}</view>
      </view>
    </view>
    <view class="weui-flex">
      <view class="weui-flex__item">
        <view class="placeholder">总收入：{{thisMonthResult.totalIncomePrice}}</view>
      </view>
    </view>
  </view>
  <!-- 账单详情 -->
  <view class="weui-demo-dialog {{showBillDialog ? 'weui-demo-dialog_show' : ''}}">
    <view class="weui-mask" bindtap="closeBillDialog"></view>
    <view class="weui-dialog__wrp" bindtap="closeBillDialog">
      <view class="weui-dialog" catchtap="stopEvent">
        <view class="weui-dialog__hd bill-title">
          <view class="customer-dialog-clo" bindtap="closeBillDialog">
            <image style="width:30px;height:30px;" src="/images/icon-close.png"/>
          </view>
          <view class="weui-dialog__title">账单详情</view>
        </view>
        <view class="weui-dialog__bd" style="margin-top:-47px;">
          <view class="weui-panel__bd">
            <view class="weui-media-box weui-media-box_small-appmsg" style="max-height: 300px;">
              <view class="weui-cells weui-cells_in-small-appmsg">
                <navigator wx:for="{{billInfos}}" wx:key="index" wx:for-item="item" url="" class="weui-cell weui-cell_example weui-cell_access" hover-class="weui-cell_active">
                  <view class="weui-cell__hd">
                    <image src="{{item.billType == 'subtract' ? '/images/icon_income.png':'/images/icon_pay.png'}}" style="width: 40px;height: 40px;margin-right: 16px;vertical-align:middle;" />
                  </view>
                  <view class="weui-cell__bd weui-cell_primary">
                    <view class="title">{{item.shopName}}</view>
                    <view class="num">数量({{item.num}})</view>
                  </view>
                  <view class="weui-cell__ft">
                    <view class="price {{item.billType == 'subtract' ? 'in-price' : 'out-price'}}">{{item.billType == "subtract" ? "+" : "-"}}{{item.price}}</view>
                    <view class="create-date">{{item.createTimeStr}}</view>
                  </view>
                </navigator>
              </view>
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>
  <!-- 账单详情 -->
</view>